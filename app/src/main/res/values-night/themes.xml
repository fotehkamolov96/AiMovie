<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AiMovie" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimaryDark">@color/color_status_bar</item>
        <item name="android:navigationBarColor">@color/color_status_bar</item>
        <item name="android:statusBarColor">@color/color_navigation_bar</item>
    </style>

    <style name="Theme.AiMovie.Launcher">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@color/color_status_bar</item>
        <item name="colorPrimaryDark">@color/color_status_bar</item>
        <item name="android:navigationBarColor">@color/color_status_bar</item>
        <item name="android:statusBarColor">@color/color_navigation_bar</item>
        <item name="android:windowBackground">@color/color_background</item>
        <!-- for Android 5+, you can change the colorPrimaryDark color to match the window background color -->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>
</resources>