<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_margin8"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardCornerRadius="6dp">

        <ImageView
            android:id="@+id/iv_movie_poster_more_details"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ai_no_connection" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_movie_title_more_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_margin8"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="@dimen/standard_card_padding8"
        android:textColor="@color/color_text_white"
        android:textSize="@dimen/item_text_size17"
        tools:text="@string/text_more_list" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_movie_release_date_more_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_margin8"
            android:maxLines="1"
            android:paddingBottom="@dimen/standard_margin8"
            android:textColor="@color/color_text_white"
            android:textSize="@dimen/item_text_size12"
            tools:text="2021-09-09" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_margin8"
            android:text="â€¢"
            android:textColor="@color/color_text_white" />

        <TextView
            android:id="@+id/tv_movie_rating_more_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_margin8"
            android:maxLines="1"
            android:paddingBottom="@dimen/standard_margin8"
            android:textColor="@color/color_text_white"
            android:textSize="@dimen/item_text_size12"
            tools:text="8.5" />
    </LinearLayout>


</LinearLayout>
