<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kamolovproducts.aimovie">

    <!-- Have access to the Internet of any quality. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Allows applications to access information about networks. -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Allows applications to access information about Wi-Fi networks. -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- Allows the application to write to external storage. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AiMovie">
        <activity
            android:name=".ui.splashscreen.SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AiMovie.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />
        <activity
            android:name=".ui.views.DetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.views.TopRatedActivity"
            android:exported="false" />
        <activity
            android:name=".ui.views.NowPlayingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.views.PopularActivity"
            android:exported="false" />
        <activity
            android:name=".ui.views.TrendingMovies"
            android:exported="false" />


    </application>

</manifest>